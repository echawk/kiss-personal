#!/bin/sh
# kiss-revdepends, except also search for packages in your $KISS_PATH

for repo in $(echo "$KISS_PATH:/var/db/kiss/installed" | tr ':' ' '); do
    for pkg in "$repo"/*; do
        (   
            if grep -sq "$1" "$pkg/depends"; then
                echo "$pkg"
            fi
        ) &
    done
done
wait
