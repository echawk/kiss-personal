#!/bin/sh -e

for p in *.patch; do
    patch -p1 < "$p"
done

export DESTDIR="$1"

meson \
    --prefix=/usr \
    --libexecdir=/usr/lib \
    -Ddbus=disabled \
    -Dsndfile=enabled \
    -Dpipewire-jack=enabled \
    -Djack-devel=true \
    -Dlibjack-path=/usr/lib \
    -Dtests=disabled \
    -Dudev=enabled \
    -Dudevrulesdir=/usr/lib/udev/rules.d \
    -Dsession-managers=wireplumber \
    -Dwireplumber:system-lua=true \
    . output

ninja -C output
ninja -C output install
