#!/bin/sh -e

export CFLAGS="$CFLAGS -w -fpermissive"
export CXXFLAGS="$CXXFLAGS -w -fpermissive"

cmake -B build \
    -S build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_SHARED_LIBS=ON \
    -DWITH_UPNP=OFF \
    -Wno-dev

cmake --build   build
cmake --install build
